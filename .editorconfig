root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = false
trim_trailing_whitespace = true

[{*.js,*.json,*.yml,.browserslistrc,.postcssrc}]
indent_style = space
indent_size = 2

[*.txt]
end_of_line = crlf

# Two trailing spaces indicate a line break in Markdown.
[*.md]
trim_trailing_whitespace = false
